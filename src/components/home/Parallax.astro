---
import { Image } from "astro:assets";

import VastFarmingLand from "@assets/images/home/vast-farming-land.png";
---

<Image
  src={VastFarmingLand}
  alt="Vast Farming Land"
  class="home-parallax w-full h-[200px] sm:h-[250px] lg:h-[500px]"
/>

<script type="text/javascript" is:inline>
  window.addEventListener("load", () => {
    const image = document.getElementsByClassName("home-parallax");
    new window.simpleParallax(image, {
      delay: 1.5,
      transition: "cubic-bezier(0,0,0,1)",
      orientation: "up",
      scale: 1.6,
    });
  });
</script>
