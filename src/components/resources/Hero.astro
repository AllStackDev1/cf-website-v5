---
import { Image } from "astro:assets";

interface Props {
  title: string;
  image: ImageMetadata;
}

const { title, image } = Astro.props;
---

<div
  class="w-5xl h-24 sm:h-52 md:h-72 flex justify-between overflow-hidden bg-[#022d2b]"
>
  <div class="my-auto sm:w-[610px] ml-3 sm:ml-4 md:ml-5 xl:mx-auto">
    <p
      class="text-2xl sm:text-3xl md:text-5xl font-bold text-left text-white my-auto"
    >
      {title}
    </p>
  </div>
  <Image src={image} alt="Hero Image" />
</div>
