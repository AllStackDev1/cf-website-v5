---
import NormalHeader from "./NormalHeader";
import ProductsHeader from "./ProductsHeader";

export interface Props {
  pathname: string;
}

const { pathname } = Astro.props;
---

{
  pathname.includes("buyer") || pathname.includes("grower") ? (
    <ProductsHeader
      client:load
      isBuyer={pathname.includes("buyer")}
      pathname={pathname}
    />
  ) : (
    <NormalHeader client:load />
  )
}
